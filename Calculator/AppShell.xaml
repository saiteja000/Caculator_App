<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Calculator.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Calculator"
    Shell.FlyoutBehavior="Flyout">

    <FlyoutItem Title="About" Route="about">
    <ShellContent ContentTemplate="{DataTemplate local:About}" />
</FlyoutItem>

<FlyoutItem Title="Calculator" Route="calculator">
    <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
</FlyoutItem>

<!-- Custom-styled menu items with different color schemes -->
<MenuItem Text="Light Color Scheme" Clicked="OnLightSchemeClicked" />
<MenuItem Text="Dark Color Scheme" Clicked="OnDarkSchemeClicked" />
<MenuItem Text="Red Color Scheme" Clicked="OnRedSchemeClicked" />
<MenuItem Text="Pink Color Scheme" Clicked="OnPinkSchemeClicked" />

</Shell>
